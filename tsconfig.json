{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ES2022"],
    "target": "es2020",
    "moduleResolution": "Node",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./src",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": [
    "./node_modules",
    "./tests",
    "./dist",
    "./dist_test"
  ]
}
